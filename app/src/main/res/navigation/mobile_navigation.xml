<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_matches">

    <fragment
        android:id="@+id/navigation_matches"
        android:name="com.example.shualeduri.ui.matches.MatchesFragment"
        android:label="@string/title_matches"
        tools:layout="@layout/fragment_matches" />

    <fragment
        android:id="@+id/navigation_top_players"
        android:name="com.example.shualeduri.ui.top_players.TopPlayersFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_top_players" />

    <fragment
        android:id="@+id/navigation_videos"
        android:name="com.example.shualeduri.ui.videos.VideosFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_videos" />
    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.example.shualeduri.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.shualeduri.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>